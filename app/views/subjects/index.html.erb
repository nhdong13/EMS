<h1><%= t ".page_title" %></h1>

<div class="row">
  <div class="col-sm-9">
    <input type="text" class="input-search" onkeyup="searchTbl(1)" id="searchBox"
      placeholder="<%= t(".search") %>" title="<%= t ".type_name" %>">
  </div>
  <div class="col-sm-2">
    <%= link_to t(".create"), "#", type: "button", class: "btn btn-success btn-lg", 
      data: { toggle: "modal", target: "#myModal" } %>
    <!-- Trigger the modal with a button -->
  </div>
</div>

<div class="row">
  <table class="table" id="dataTbl">
    <thead>
      <tr>
        <th><%= t ".no" %></th>
        <th><%= t ".name" %></th>
        <th><%= t ".view_detail" %></th>
      </tr>
    </thead>
    <tbody>
      <% @subjects.each.with_index(1) do |subject, index| %>
        <tr>
          <td><%= index %></td>
          <td><%= subject.name %></td>
          <td><%= link_to t(".view"), edit_subject_path(subject), 
              class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @subjects %>

  <!-- Modal -->
  <%= form_for(@subject) do |f| %>
    <div class="modal fade" id="myModal" role="dialog">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">

          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title"><%= t ".create" %></h4>
          </div>

          <div class="modal-body" style="height:300px">
            <div class="col-xs-12">
              
              <div class="form-group">
                <%= f.label t(".name") %>
                <%= f.text_field :name, class: "form-control", 
                  placeholder: t(".enter_name") %>
                <p class="text-danger"><%= show_errors(@subject, :name) %></p>
              </div>
              <div class="form-group">
                <%= f.label t(".description") %>
                <%= f.text_area :description, class: "form-control", 
                  placeholder: t(".enter_description") %>
                <p class="text-danger"><%= show_errors(@subject, :description) %></p>
              </div>
            </div>
          </div>

          <div class="modal-footer">
            <%= f.submit t(".submit"), class: "btn btn-primary" %>
            <button type="button" class="btn btn-default" 
              data-dismiss="modal"><%= t ".close" %></button>
          </div>
          
        </div>
      </div>
    </div>
  <% end %>
</div>

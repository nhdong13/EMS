<div class="col-xs-12">
  <%= form_for(@subject) do |f| %>
    <div class="form-group">
      <%= f.label t(".name") %>
      <%= f.text_field :name, class: "form-control", placeholder: t(".enter_name") %>
      <p class="text-danger"><%= show_errors(@subject, :name) %></p>
    </div>

    <div class="form-group">
      <%= f.label t(".description") %>
      <%= f.text_area :description, class: "form-control", placeholder: t(".enter_description") %>
      <p class="text-danger"><%= show_errors(@subject, :description) %></p>
    </div>
    <%= f.submit t(".submit"), class: "btn btn-primary btn-block" %>

  <% end %>
</div>

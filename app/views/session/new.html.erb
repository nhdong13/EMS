<% provide(:title, t(".login")) %>
<h1><%= t ".login" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label t ".email" %>
      <%= f.email_field :email, class: "form-control lg-ip" %>

      <%= f.label t ".password" %>
      <%= f.password_field :password, class: "form-control lg-ip" %>

      <div class="text-center login-btn"><%= f.submit t(".login"), class: "btn btn-success btn-lg" %></div>
    <% end %>

  </div>	
</div>

<div class="form-group">
  <%= f.label t(".password") %>
  <%= f.password_field :password, class: "form-control", placeholder: t(".your_password") %>
  <p class="text-danger"><%= show_errors(@user, :password) %></p>
</div>

<div class="form-group">
  <%= f.label t(".confirmation") %>
  <%= f.password_field :password_confirmation, class: "form-control", placeholder: t(".enter_confirmation") %>
  <p class="text-danger"><%= show_errors(@user, :password_confirmation) %></p>
</div>

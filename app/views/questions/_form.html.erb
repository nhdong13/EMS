<%= form_for(@question) do |f| %>
    <div class="modal fade" id="myModal" role="dialog">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">

          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title"><%= t ".create" %></h4>
          </div>

          <div class="modal-body">
            <div class="col-xs-12">
              
              <div class="form-group">
                <%= f.label t(".qs_content") %>
                <%= f.text_field :question_content, class: "form-control", 
                  placeholder: t(".enter_content") %>
                <p class="text-danger"><%= show_errors(@question, :name) %></p>
              </div>

              <div class="form-group">
                <%= f.label t(".qs_type") %>
                <%= select_tag :type_of_question, options_for_select(Question.type_of_questions), class: "form-control", prompt: t(".select_type") %>
                <p class="text-danger"><%= show_errors(@question, :description) %></p>
              </div>
              
              <div class="form-group">
                <div class="row">
                  <div class="col-xs-11">
                    <%= f.label t(".answer") %>
                  </div>
                  <div class="col-xs-1">
                    <button class="btn btn-success js-add-answer-btn" type="button">+</button>
                  </div>
                </div>
                <div class="js-answers"></div>
              </div>
            </div>
          </div>

          <div class="modal-footer">
            <%= f.submit t(".submit"), class: "btn btn-primary" %>
            <button type="button" class="btn btn-default" 
              data-dismiss="modal"><%= t ".close" %></button>
          </div>
          
        </div>
      </div>
    </div>
  <% end %>

<%= form_for(@exam) do |f| %>
  <div class="modal fade" id="modalExam" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><%= t ".create" %></h4>
        </div>

        <div class="modal-body">
          <div class="col-xs-12">
            
            <div class="form-group">
              <%= f.label t(".name") %>
              <%= f.text_field :name, class: "form-control", 
                placeholder: t(".enter_name") %>
              <p class="text-danger"><%= show_errors(@exam, :name) %></p>
            </div>

            <div class="form-group">
              <%= f.label t(".time") %>
              <%= f.text_field :time_limit, class: "form-control", 
                placeholder: t(".enter_time") %>
              <p class="text-danger"><%= show_errors(@exam, :time_limit) %></p>
            </div>

            <div class="form-group">
              <%= f.label t(".mark") %>
              <%= f.text_field :mark_require, class: "form-control", 
                placeholder: t(".enter_mark") %>
              <p class="text-danger"><%= show_errors(@exam, :mark_require) %></p>
            </div>

            <div class="form-group">
              <%= f.label t(".status") %>
              <%= select_tag :status, options_for_select(Exam.statuses), 
                class: "form-control" %>
              <p class="text-danger"><%= show_errors(@exam, :status) %></p>
            </div>
            
          </div>
        </div>

        <div class="modal-footer">
          <%= f.submit t(".submit"), class: "btn btn-primary" %>
          <button type="button" class="btn btn-default" 
            data-dismiss="modal"><%= t ".close" %></button>
        </div>
        
      </div>
    </div>
  </div>
<% end %>
